Arelin.Thing.is_rooted(self: Arelin.Thing): Bool
  let self.buf = Arelin.Thing.get_buf(self)
  let is_root_buff = ((buff) 
    case buff:
    | #shielded# Bool.false;
    | #slowed#   Bool.false; 
    | #hasted#   Bool.false;
    | #silenced# Bool.false;
    | #rooted#   Bool.true;
    | #stunned#  Bool.true;
  ) :: Arelin.Game.Buff -> Bool
  case List.find<>(is_root_buff, self.buf):
  | #none# Bool.false;
  | #some# Bool.true;