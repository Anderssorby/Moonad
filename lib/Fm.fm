Fm.Context: Type
  List(Pair(Fm.Name, Fm.HCore))
  
// TODO
Fm.HCore.infer(term: Fm.HCore, defs: Fm.Defs, ctx: Fm.Context): Maybe(Fm.HCore)
  case term:
  | ref => Maybe.none<>;
  | bru => Maybe.none<>;
  | typ => Maybe.some<>(Fm.HCore.typ);
  | all =>
    let body_var = Fm.HCore.bru(List.length<>(ctx))
    let body_ctx = List.cons<>({term.name,term.type}, ctx)
    do Maybe {
      Fm.HCore.check(term.type, Fm.HCore.typ, defs, ctx);
      Fm.HCore.check(term.body(body_var), Fm.HCore.typ, defs, body_ctx);
      return Fm.HCore.typ;
    };
  | lam => Maybe.none<>;
  | app =>
    case Fm.HCore.infer(term.func, defs, ctx) as func_typ:
    | none => Maybe.none<>;
    | some =>
      let func_typ = Fm.HCore.reduce(func_typ.value)
      case func_typ:
      | ref => Maybe.none<>;
      | bru => Maybe.none<>;
      | typ => Maybe.none<>;
      | all => do Maybe {
        Fm.HCore.check(term.argm, func_typ.type, defs, ctx);
        return func_typ.body(term.argm);
      };
      | lam => Maybe.none<>;
      | app => Maybe.none<>;
    ;
  ;

