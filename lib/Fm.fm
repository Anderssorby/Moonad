// A Formality Letter is a 6-bit value:
//  0-25 is A-Z
// 26-52 is a-z
// 52-61 is 0-9
//    62 is .
//    63 is _
Fm.Letter: Type
  Word(6)

// A Formality Name is a list of letters
Fm.Name: Type
  List(Fm.Letter)

// A Fm.Core term
T Fm.Core
| Fm.Core.ref(name: Fm.Name);
| Fm.Core.typ;
| Fm.Core.all(name: Fm.Name, type: Fm.Core, body: Fm.Core);
| Fm.Core.lam(name: Fm.Name, body: Fm.Core);
| Fm.Core.app(func: Fm.Core, argm: Fm.Core);

// A High Order Fm.Core term
T Fm.HCore
| Fm.HCore.ref(name: Fm.Name);
| Fm.HCore.bru(indx: Nat);
| Fm.HCore.typ;
| Fm.HCore.all(name: Fm.Name, type: Fm.HCore, body: Fm.HCore -> Fm.HCore);
| Fm.HCore.lam(name: Fm.Name, body: Fm.HCore -> Fm.HCore);
| Fm.HCore.app(func: Fm.HCore, argm: Fm.HCore);

// A map from Names to Formality definitions
Fm.Defs: Type
  Map(Fm.Core)

// A map from Names to Formality definitions
Fm.HDefs: Type
  Map(Fm.HCore)

// A Set of names
Fm.NameSet: Type
  Set

// An empty map
Fm.Defs.new: Fm.Defs
  Map.new<Fm.Core>

// Gets a core term from a map by its name
Fm.Defs.get(name: Fm.Name, defs: Fm.Defs): Maybe(Fm.Core)
  Map.get<Fm.Core>(Fm.Name.to_bits(name), defs)

// Adds a name, core term pair to a map
Fm.Defs.set(name: Fm.Name, term: Fm.Core, defs: Fm.Defs): Map(Fm.Core)
  Map.set<Fm.Core>(Fm.Name.to_bits(name), term, defs)
  
// An empty map
Fm.HDefs.new: Fm.HDefs
  Map.new<Fm.HCore>

// Gets a core term from a map by its name
Fm.HDefs.get(name: Fm.Name, defs: Fm.HDefs): Maybe(Fm.HCore)
  Map.get<Fm.HCore>(Fm.Name.to_bits(name), defs)

// Adds a name, core term pair to a map
Fm.HDefs.set(name: Fm.Name, term: Fm.HCore, defs: Fm.HDefs): Map(Fm.HCore)
  Map.set<Fm.HCore>(Fm.Name.to_bits(name), term, defs)

// An empty NameSet
Fm.NameSet.new: Fm.NameSet
  Set.new

// Prefix used by the Fm.NameSet.fresh function
Fm.NameSet.fresh.prefix: Fm.Letter
  let prefix = Word.nil
  let prefix = Word.1<0>(prefix)
  let prefix = Word.1<1>(prefix)
  let prefix = Word.1<2>(prefix)
  let prefix = Word.1<3>(prefix)
  let prefix = Word.1<4>(prefix)
  let prefix = Word.1<5>(prefix)
  prefix

// Adds a name to a NameSet, prefixing it to avoid capture
Fm.NameSet.fresh(name: Fm.Name, nset: Fm.NameSet): Pair(Fm.Name, Fm.NameSet)
  let key = Fm.Name.to_bits(name)
  if Set.has(key, nset) then
    Fm.NameSet.fresh(List.cons<>(Fm.NameSet.fresh.prefix, name), nset)
  else
    {name, Set.set(key, nset)}

// Coverts a term to high order
Fm.Core.to_high(term: Fm.Core, refs: Fm.HDefs): Fm.HCore
  case term:
  | ref => case Fm.HDefs.get(term.name, refs) as got:
    | Fm.HCore.ref(term.name);
    | got.value;;
  | typ => Fm.HCore.typ;
  | all =>
    def type = Fm.Core.to_high(term.type, refs);
    def body = (x) Fm.Core.to_high(term.body, Fm.HDefs.set(term.name,x,refs));
    Fm.HCore.all(term.name, type, body);
  | lam =>
    def body = (x) Fm.Core.to_high(term.body, Fm.HDefs.set(term.name,x,refs));
    Fm.HCore.lam(term.name, body);
  | app =>
    def func = Fm.Core.to_high(term.func, refs);
    def argm = Fm.Core.to_high(term.argm, refs);
    Fm.HCore.app(func, argm);

// Coverts a term to high order
Fm.HCore.to_low(term: Fm.HCore, nset: Fm.NameSet, names: List(Fm.Name)): Fm.Core
  case term:
  | ref => Fm.Core.ref(term.name);
  | bru => case List.at<>(term.indx, names) as got:
    | none => Fm.Core.ref(Fm.Name.read("unbound"));
    | some => Fm.Core.ref(got.value);;
  | typ => Fm.Core.typ;
  | all =>
    def type = Fm.HCore.to_low(term.type, nset, names)
    get name nset = Fm.NameSet.fresh(term.name, nset)
    def body = Fm.HCore.to_low(term.body(Fm.HCore.ref(name)), nset, List.cons<>(name, names))
    Fm.Core.all(name, type, body);
  | lam =>
    get name nset = Fm.NameSet.fresh(term.name, nset)
    def body = Fm.HCore.to_low(term.body(Fm.HCore.ref(name)), nset, List.cons<>(name, names));
    Fm.Core.lam(name, body);
  | app =>
    def func = Fm.HCore.to_low(term.func, nset, names);
    def argm = Fm.HCore.to_low(term.argm, nset, names);
    Fm.Core.app(func, argm);

// Reduces a high order term to weak head normal form
Fm.HCore.reduce(term: Fm.HCore): Fm.HCore
  case term:
  | ref => Fm.HCore.ref(term.name);
  | bru => Fm.HCore.bru(term.indx);
  | typ => Fm.HCore.typ;
  | all => Fm.HCore.all(term.name, term.type, term.body);
  | lam => Fm.HCore.lam(term.name, term.body);
  | app =>
    let func = Fm.HCore.reduce(term.func)
    case func:
    | ref => term;
    | bru => term;
    | typ => term;
    | all => term;
    | lam => Fm.HCore.reduce(func.body(term.argm));
    | app => term;;

// Normalizes a high order term
Fm.HCore.normalize(term: Fm.HCore): Fm.HCore
  case Fm.HCore.reduce(term) as term:
  | ref =>
    Fm.HCore.ref(term.name);
  | bru =>
    Fm.HCore.bru(term.indx);
  | typ =>
    Fm.HCore.typ;
  | all =>
    def type = Fm.HCore.normalize(term.type)
    def body = (x) Fm.HCore.normalize(term.body(x))
    Fm.HCore.all(term.name, type, body);
  | lam =>
    def body = (x) Fm.HCore.normalize(term.body(x))
    Fm.HCore.lam(term.name, body);
  | app =>
    def func = Fm.HCore.normalize(term.func)
    def argm = Fm.HCore.normalize(term.argm)
    Fm.HCore.app(func, argm);

// Helper function
Fm.HCore.serialize.go(term: Fm.HCore, depth: Nat, x: Bits): Bits
  case term:
  | ref =>
    let name = Bits.concat(Fm.Name.to_bits(term.name))
    Bits.0(Bits.0(Bits.0(name(x))));
  | bru =>
    let name = Bits.concat(Nat.to_bits(Nat.pred(Nat.sub(depth,term.indx))))
    Bits.0(Bits.0(Bits.1(name(x))));
  | typ =>
    Bits.0(Bits.1(Bits.0(x)));
  | all =>
    let type = Fm.HCore.serialize.go(term.type, depth)
    let body = Fm.HCore.serialize.go(term.body(Fm.HCore.bru(depth)), Nat.succ(depth))
    Bits.0(Bits.1(Bits.1(type(body(x)))));
  | lam =>
    let body = Fm.HCore.serialize.go(term.body(Fm.HCore.bru(depth)), Nat.succ(depth))
    Bits.1(Bits.0(Bits.0(body(x))));
  | app =>
    let func = Fm.HCore.serialize.go(term.func, depth)
    let argm = Fm.HCore.serialize.go(term.argm, depth)
    Bits.1(Bits.0(Bits.1(func(argm(x)))));

// Serializes a term to a representative bitstring
Fm.HCore.serialize(term: Fm.HCore): Bits
  Fm.HCore.serialize.go(term, 0, Bits.nil)

// Determines if two terms are equal
Fm.HCore.equal(a: Fm.HCore, b: Fm.HCore, vars: Nat, seen: Set): Bool
  let a1 = Fm.HCore.reduce(a)
  let b1 = Fm.HCore.reduce(b)
  let ah = Fm.HCore.serialize(a1)
  let bh = Fm.HCore.serialize(b1)
  let id = Bits.concat(ah, bh)
  if Bool.or(Bits.eql(ah, bh), Set.has(id, seen)) then
    Bool.true
  else
    let seen = Set.set(id, seen)
    case a1:
    | ref => Bool.false;
    | bru => Bool.false;
    | typ => Bool.false;
    | all =>
      case b1:
      | ref => Bool.false;
      | bru => Bool.false;
      | typ => Bool.false;
      | all =>
        let a1_body = a1.body(Fm.HCore.bru(vars))
        let b1_body = b1.body(Fm.HCore.bru(vars))
        let eq_type = Fm.HCore.equal(a1.type, b1.type, vars, seen)
        let eq_body = Fm.HCore.equal(a1_body, b1_body, Nat.succ(vars), seen)
        Bool.and(eq_type, eq_body);
      | lam => Bool.false;
      | app => Bool.false;;
    | lam =>
      case b1:
      | ref => Bool.false;
      | bru => Bool.false;
      | typ => Bool.false;
      | all => Bool.false;
      | lam =>
        let a1_body = a1.body(Fm.HCore.bru(vars))
        let b1_body = b1.body(Fm.HCore.bru(vars))
        let eq_body = Fm.HCore.equal(a1_body, b1_body, Nat.succ(vars), seen)
        eq_body;
      | app => Bool.false;;
    | app =>
      case b1:
      | ref => Bool.false;
      | bru => Bool.false;
      | typ => Bool.false;
      | all => Bool.false;
      | lam => Bool.false;
      | app =>
        let eq_func = Fm.HCore.equal(a1.func, b1.func, vars, seen)
        let eq_argm = Fm.HCore.equal(a1.argm, b1.argm, vars, seen)
        Bool.and(eq_func, eq_argm);;

